<h1><%= @course.name %></h1>

<div class="card">
    <img class="card-img-top" src="http://www.w3schools.com/images/w3schools_green.jpg" alt="Card image cap">
    <div class="card-block">
        <h4 class="card-title"><%= @course.name %>  </h4>
        <p class="card-text">  <%= @course.description %> </p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"> <b> Instructor: </b> <%= @course.instructor %>  </li>
        <li class="list-group-item"> <b> Price:</b> $ <%= @course.price %>  </li>
        <li class="list-group-item"> <b> Member price:</b> $ <%= @course.premiumPrice %>   </li>
        <li class="list-group-item"> <b> Type of Event:</b> <%= @course.typeOfEvent %>   </li>
        <li class="list-group-item"> <b> Size Limit:</b> <%= @course.sizeLimit %>   </li>
        <% if !@course.additionalInfo.nil? %>
        <li class="list-group-item"> <b> Additional Information:</b> <%= @course.additionalInfo %>   </li>
        <% end %>
        <li class="list-group-item">       <%= link_to 'Back', courses_path %>
        </li>
    </ul>
    <div class="card-block">
        <% if logged_in? %>
            <% if current_user.admin? %>
                <%= link_to 'Edit', edit_course_path %> |
                <%= link_to 'Delete', @course, method: :delete, data: { confirm: "Are you sure?" } %>
            </br> </br> </br>
            <% end %>
        <% end %>
    </div>
</div>
